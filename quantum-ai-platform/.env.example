# Quantum AI Platform Environment Configuration
# Copy this file to .env and modify the values for your environment

# =================================================================
# Environment Settings
# =================================================================
QUANTUM_AI_ENV=development
DEBUG_MODE=true
LOG_LEVEL=INFO

# =================================================================
# Database Configuration
# =================================================================

# PostgreSQL (Main relational database)
DATABASE_URL=postgresql://quantumai:password@localhost:5432/quantumai_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=quantumai_db
DATABASE_USER=quantumai
DATABASE_PASSWORD=password

# MongoDB (Document storage)
MONGODB_URL=mongodb://localhost:27017/quantumai_mongo
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=quantumai_mongo
MONGODB_USER=quantumai
MONGODB_PASSWORD=password

# Redis (Caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0

# Qdrant (Vector database)
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# ChromaDB (Alternative vector database)
CHROMADB_URL=http://localhost:8001
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# =================================================================
# Security Configuration
# =================================================================

# JWT Authentication
JWT_SECRET_KEY=quantum_ai_jwt_secret_key_change_in_production_2025
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption
ENCRYPTION_KEY=quantum_ai_32_char_encryption_key
ENCRYPTION_ALGORITHM=AES-256-CBC

# API Security
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# Session Management
SESSION_TIMEOUT_SECONDS=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# =================================================================
# Quantum Computing Configuration
# =================================================================

# Virtual Quantum Computer
QUANTUM_DEFAULT_QUBITS=32
QUANTUM_MAX_QUBITS=64
QUANTUM_SIMULATION_PRECISION=0.001
QUANTUM_ERROR_CORRECTION=true
QUANTUM_NOISE_LEVEL=0.1
QUANTUM_MAX_CIRCUITS=1000
QUANTUM_EXECUTION_TIMEOUT_SECONDS=300

# Quantum Circuit Templates
QUANTUM_TEMPLATES_DIR=./templates/quantum_circuits
QUANTUM_RESULTS_RETENTION_DAYS=365

# =================================================================
# Time Crystal Configuration
# =================================================================

# Time Crystal Engine
TIME_CRYSTAL_DEFAULT_COUNT=8
TIME_CRYSTAL_MAX_COUNT=32
TIME_CRYSTAL_COUPLING_STRENGTH=0.5
TIME_CRYSTAL_TEMPERATURE=0.1
TIME_CRYSTAL_EXTERNAL_FIELD=0.3
TIME_CRYSTAL_SYNC_INTERVAL_MS=100
TIME_CRYSTAL_COHERENCE_THRESHOLD=0.8

# Time Crystal Simulation
TIME_CRYSTAL_SIMULATION_PRECISION=0.0001
TIME_CRYSTAL_MAX_DIMENSIONS=4
TIME_CRYSTAL_FLOQUET_FREQUENCY=2.4

# =================================================================
# Neuromorphic Computing Configuration
# =================================================================

# Spiking Neural Network
NEUROMORPHIC_DEFAULT_NEURONS=10000
NEUROMORPHIC_MAX_NEURONS=100000
NEUROMORPHIC_CONNECTIVITY=0.1
NEUROMORPHIC_LEARNING_RATE=0.01
NEUROMORPHIC_QUANTUM_COUPLING=0.5
NEUROMORPHIC_PLASTICITY_ENABLED=true
NEUROMORPHIC_NOISE_LEVEL=0.1

# Neuron Models
NEUROMORPHIC_DEFAULT_MODEL=LIF
NEUROMORPHIC_REFRACTORY_PERIOD_MS=2.0
NEUROMORPHIC_MEMBRANE_THRESHOLD=-55.0
NEUROMORPHIC_RESTING_POTENTIAL=-70.0

# =================================================================
# AI/ML Configuration
# =================================================================

# Model Training
AI_MODEL_CACHE_SIZE_MB=2048
AI_TRAINING_BATCH_SIZE=32
AI_LEARNING_RATE=0.001
AI_GPU_ACCELERATION=true
AI_MAX_EPOCHS=1000
AI_EARLY_STOPPING_PATIENCE=10

# Model Storage
AI_MODELS_DIR=./models
AI_CHECKPOINTS_DIR=./checkpoints
AI_TENSORBOARD_DIR=./tensorboard_logs

# Hybrid Optimization
AI_QUANTUM_CLASSICAL_RATIO=0.5
AI_NEUROMORPHIC_INTEGRATION=true
AI_OPTIMIZATION_ALGORITHM=ADAM

# =================================================================
# IoT Configuration
# =================================================================

# MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=quantumai
MQTT_PASSWORD=quantum_mqtt_password
MQTT_QOS=1
MQTT_KEEPALIVE=60

# IoT Device Management
IOT_MAX_DEVICES=10000
IOT_DEVICE_TIMEOUT_SECONDS=300
IOT_QUANTUM_SYNC_ENABLED=true
IOT_METRICS_RETENTION_DAYS=90

# Device Discovery
IOT_DISCOVERY_ENABLED=true
IOT_DISCOVERY_INTERVAL_SECONDS=60
IOT_AUTO_REGISTRATION=false

# =================================================================
# Web Server Configuration
# =================================================================

# FastAPI Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4
BACKEND_RELOAD=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# WebSocket
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_CLOSE_TIMEOUT=10

# =================================================================
# Monitoring and Logging
# =================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=quantum_admin_2025

# Logging
LOG_FORMAT=json
LOG_ROTATION=true
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# Application Logs
APP_LOG_FILE=./logs/quantum_ai.log
ACCESS_LOG_FILE=./logs/access.log
ERROR_LOG_FILE=./logs/error.log

# =================================================================
# File Storage
# =================================================================

# Local Storage
STORAGE_BASE_DIR=./data
UPLOADS_DIR=./uploads
BACKUPS_DIR=./backups
TEMP_DIR=./temp

# File Limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=["json", "yaml", "csv", "txt", "pdf"]

# =================================================================
# Email Configuration (Optional)
# =================================================================

# SMTP Settings
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
SMTP_SSL=false

# Email Templates
EMAIL_FROM_ADDRESS=noreply@quantumai.local
EMAIL_FROM_NAME=Quantum AI Platform

# =================================================================
# External Services (Optional)
# =================================================================

# Cloud Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_SERVICE_ACCOUNT_KEY=

# Azure
AZURE_STORAGE_CONNECTION_STRING=

# =================================================================
# Development Settings
# =================================================================

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_quantumai_db

# Debugging
PROFILING_ENABLED=false
PROFILE_OUTPUT_DIR=./profiles

# Development Tools
HOT_RELOAD=true
MOCK_EXTERNAL_SERVICES=false
FIXTURE_DATA_ENABLED=true

# =================================================================
# Production Overrides
# =================================================================

# When QUANTUM_AI_ENV=production, ensure these are set:
# - Strong JWT_SECRET_KEY (minimum 32 characters)
# - Strong ENCRYPTION_KEY (exactly 32 characters)
# - Strong database passwords
# - HTTPS URLs for all services
# - DEBUG_MODE=false
# - SESSION_COOKIE_SECURE=true
# - Proper CORS_ORIGINS for your domain
# - Email configuration for notifications
# - Cloud storage for backups
# - Strong GRAFANA_ADMIN_PASSWORD

# =================================================================
# Docker Compose Override
# =================================================================

# These variables can override docker-compose.yml settings
COMPOSE_PROJECT_NAME=quantum-ai-platform
COMPOSE_PROFILES=development

# Custom Docker images (if using private registry)
CUSTOM_IMAGE_REGISTRY=
QUANTUM_AI_IMAGE_TAG=latest